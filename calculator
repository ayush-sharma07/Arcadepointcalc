<body>
  <h1>Arcade Points Calculator</h1>
  <div class="container">
    <label>Skill Badges Completed</label>
    <input type="number" id="badges" value="0" />

    <label>Quests Completed</label>
    <input type="number" id="quests" value="0" />

    <label>Trivia Badges</label>
    <input type="number" id="trivia" value="0" />

    <label>Facilitator Bonus Points</label>
    <input type="number" id="bonus" value="0" />

    <button onclick="calculatePoints()">Calculate</button>

    <div class="result" id="result"></div>
  </div>

<script>
function calculatePoints() {
  let badges = parseInt(document.getElementById('badges').value) || 0;
  let quests = parseInt(document.getElementById('quests').value) || 0;
  let trivia = parseInt(document.getElementById('trivia').value) || 0;
  let bonus = parseInt(document.getElementById('bonus').value) || 0;

  // Points logic (example: Skill badge = 1 pt, Quest = 6 pts, Trivia = 1 pt)
  let total = (badges * 1) + (quests * 6) + (trivia * 1) + bonus;

  let tier = "";
  if (total >= 85) tier = "Arcade Legend";
  else if (total >= 75) tier = "Arcade Champion";
  else if (total >= 65) tier = "Arcade Ranger";
  else if (total >= 40) tier = "Arcade Trooper";
  else if (total >= 20) tier = "Arcade Novice";
  else tier = "Below Novice";

  document.getElementById('result').innerHTML = `Total Points: <b>${total}</b><br>Tier: <b>${tier}</b>`;
}
</script>
